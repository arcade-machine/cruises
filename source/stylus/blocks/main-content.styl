.main-content
  padding 50px 15px 30px 15px
  background-color #f3f3f3
  display flex
  flex-direction column
  box-sizing border-box

.main-content__header
  padding 0
  margin 0
  margin-bottom 10px
  font-size 20px
  text-align center
  color #0d3351

.main-content__filter
  padding 0
  margin 0
  margin-bottom 30px
  font-family "Raleway Regular", Arial, sans-serif
  font-size 14px
  font-weight 600
  text-align center
  color #0d3351

.main-content__list
  max-width 290px
  margin 0 auto
  margin-bottom 20px
  display grid
  grid-row-gap 30px