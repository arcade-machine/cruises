.social
  margin-bottom 15px

.social__head
  font-family "Raleway Regular", Arial, sans-serif
  font-size 14px
  font-weight 600
  color #0d3351
  text-align center

.social__list
  display flex
  justify-content center

.social__item
  width 30px
  height 30px
  margin-right 10px
  border-radius 50%
  background-color #0d3351

  &:last-child
    margin-right 0

.social__link
  width 100%
  height 100%
  display block