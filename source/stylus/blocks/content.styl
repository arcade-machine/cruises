.main-content
  padding 50px 15px 30px 15px
  background-color #f3f3f3
  display flex
  flex-direction column
  box-sizing border-box

.main-content__header
  padding 0
  margin 0 auto
  margin-bottom 10px
  font-size 20px
  color #0d3351
  display block

.main-content__filter
  padding 0
  padding-right 15px
  margin 0 auto
  margin-bottom 30px
  font-family "Raleway Regular", Arial, sans-serif
  font-size 14px
  font-weight 600
  color #0d3351
  display block
  position relative

  &::after
    content ""
    width 8px
    height 5px
    background-image url("../img/icons/icon-triangle.svg")
    background-size cover
    position absolute
    right 0
    top 7px

.main-content__filter span
  font-style italic

.main-content__list
  max-width 290px
  margin 0 auto
  margin-bottom 20px
  display grid
  grid-row-gap 30px

@media (min-width: $tablet)
  .main-content__header
    font-size 26px

  .main-content__list
    max-width 720px
    grid-template-columns 1fr 1fr
    grid-column-gap 30px
    grid-row-gap 25px

@media (min-width: $desktop)
  .main-content__header
    font-size 36px

  .main-content__list
    max-width 1140px
    grid-template-columns 1fr 1fr
    grid-template-rows 304px 304px 406px
    grid-column-gap 30px
    grid-row-gap 25px