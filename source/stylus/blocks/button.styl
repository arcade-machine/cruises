.button
  min-height 47px
  min-width 200px
  padding 0
  margin 0 auto
  font-family "Raleway Regular", Arial, sans-serif
  font-size 14px
  text-align center
  color #ffffff
  background-color #33c7fd
  border none
  box-sizing border-box
  transition all 0.4s ease-out
  cursor pointer

  &:hover
    background-color #13b0e9

  &:active
    background-color #64d6ff