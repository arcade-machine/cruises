.pop-up--open
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  display flex
  background-color rgba(0, 0, 0, 0.5)

.pop-up__list
  display none

.pop-up--open .pop-up__list
  width 100%
  max-width 290px
  padding 25px
  margin auto
  background-color #ffffff
  box-sizing border-box
  display block

.pop-up__item
  display none

.pop-up__item--open
  display flex
  flex-wrap wrap
  justify-content space-between
  position relative

.pop-up__slider
  width 100%

.pop-up__content
  width 100%
  display flex
  flex-direction column

.pop-up__image
  display none
  margin-bottom 20px

.pop-up__slider-image
  display none

.pop-up__slider-small-image
  width 85px
  height 55px

.pop-up__header
  padding 0
  margin 0
  font-size 18px
  color #00a2dd

.pop-up__route
  font-family "Raleway Regular", Arial, sans-serif
  font-size 14px
  font-weight 600

  & span
    font-family "Raleway Bold", Arial, sans-serif

.pop-up__time
  font-family "Raleway Regular", Arial, sans-serif
  font-size 13px
  font-weight 600

  & span
    font-family "Raleway Bold", Arial, sans-serif

.pop-up__schedule
  display none
  font-family "Raleway Regular", Arial, sans-serif
  font-size 14px
  font-weight 600

  & span
    font-family "Raleway Bold", Arial, sans-serif

.pop-up__price
  padding 0
  margin 0
  margin-bottom 20px
  font-size 30px
  color #0d3351

.pop-up__close
  width 15px
  height 15px
  padding 0
  margin 0
  border none
  background-color transparent
  background-image url("../img/icons/icon-close.svg")
  background-size 100% 100%
  position absolute
  top: -20px
  right: -20px
  cursor pointer

@media (min-width: $tablet)
  .pop-up--open .pop-up__list
    width 100%
    padding 50px
    max-width 720px

  .pop-up__slider
    width 48%

  .pop-up__schedule
    display inline

  .pop-up__content
    width 48%

  .pop-up__close
    top: -25px
    right: -15px

  .pop-up__slider-image
    display grid
    grid-template-columns 1fr 1fr 1fr 1fr
    grid-column-gap 10px

@media (min-width: $desktop)
  .pop-up--open .pop-up__list
    max-width 850px

