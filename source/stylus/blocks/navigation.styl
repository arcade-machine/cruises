.navigation
  margin-bottom 60px
  position relative

.navigation--open .navigation__list
  width 300px
  padding 40px
  display flex
  flex-direction column
  position absolute
  background-color #0d3351
  box-sizing border-box
  z-index 2

.navigation__list
  display none

.navigation__item
  display flex
  align-items center

.navigation__link
  width 100%
  height 100%
  display block
  font-size 18px
  color #ffffff
  text-decoration none

  &:visited
    color #ffffff

.navigation__burger
  width 23px
  height 17px
  padding 0
  margin 0
  background-color transparent
  background-image url("../img/icons/icon-burger.svg")
  background-size cover
  border none
  cursor pointer

@media (min-width: $tablet)
  .navigation
    margin 0

  .navigation--open .navigation__list
    width 420px
    padding 70px 40px